<Window x:Class="Gu.Wpf.DataGrid2D.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.Wpf.DataGrid2D.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance demo:Vm}"
        mc:Ignorable="d">
    <TabControl>
        <TabItem Header="int[,]">
            <demo:Source2DView />
        </TabItem>

        <TabItem Header="int[][]">
            <demo:JaggedView />
        </TabItem>

        <TabItem Header="List&lt;List&lt;T&gt;&gt;">
            <demo:ListOfListsView />
        </TabItem>

        <TabItem Header="SelectedCellItem">
            <demo:SelectedView />
        </TabItem>

        <TabItem Header="Styles">
            <demo:StyledView />
        </TabItem>

        <TabItem Header="RowNumbers">
            <demo:RowNumbersView />
        </TabItem>

        <TabItem Header="Debug">
            <demo:DebugView />
        </TabItem>
    </TabControl>

</Window>
