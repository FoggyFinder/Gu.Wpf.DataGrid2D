<Window x:Class="Gu.Wpf.DataGrid2D.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dataGrid2D="http://gu.se/DataGrid2D"
        xmlns:demo="clr-namespace:Gu.Wpf.DataGrid2D.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance demo:Vm}"
        mc:Ignorable="d"
        >
    <Window.DataContext>
        <demo:Vm />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="IntTemplate"
                      DataType="{x:Type System:Int32}"
                      >
            <TextBlock Text="{Binding}" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type demo:ItemVm}">
            <TextBlock Background="Gainsboro"
                       Text="{Binding Value}"
                       />
        </DataTemplate>

        <DataTemplate x:Key="ItemTemplate"
                      DataType="{x:Type demo:ItemVm}"
                      >
            <TextBlock Background="Aqua"
                       Text="{Binding Value}"
                       />
        </DataTemplate>

        <DataTemplate x:Key="HeaderItemTemplate"
                      DataType="{x:Type demo:ItemVm}"
                      >
            <TextBlock Background="HotPink"
                       Text="{Binding Value}"
                       />
        </DataTemplate>

        <Style x:Key="CellStyle"
               TargetType="{x:Type DataGridCell}"
               >
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <ContentPresenter Margin="1"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center"
                                          />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ColumnHeaderStyle"
               TargetType="{x:Type DataGridColumnHeader}"
               >
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False"
                  ItemsSource="{Binding Rows}"
                  dataGrid2D:Source2D.CellTemplate="{StaticResource IntTemplate}"
                  dataGrid2D:Source2D.Headers="{Binding ColumnHeaders}"
                  />

        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Items}"
                  dataGrid2D:Source2D.Headers="{Binding ColumnItemHeaders}"
                  />

        <DataGrid Grid.Row="2"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Items}"
                  dataGrid2D:Source2D.CellTemplate="{StaticResource ItemTemplate}"
                  dataGrid2D:Source2D.HeaderTemplate="{StaticResource HeaderItemTemplate}"
                  dataGrid2D:Source2D.Headers="{Binding ColumnItemHeaders}"
                  />

        <DataGrid Grid.Row="3"
                  AutoGenerateColumns="False"
                  CellStyle="{StaticResource CellStyle}"
                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                  ItemsSource="{Binding Items}"
                  dataGrid2D:Source2D.CellTemplate="{StaticResource ItemTemplate}"
                  dataGrid2D:Source2D.EvenSpacing="True"
                  dataGrid2D:Source2D.HeaderTemplate="{StaticResource HeaderItemTemplate}"
                  dataGrid2D:Source2D.Headers="{Binding ColumnItemHeaders}"
                  />
    </Grid>
</Window>
