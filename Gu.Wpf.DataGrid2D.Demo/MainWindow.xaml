<Window x:Class="Gu.Wpf.DataGrid2D.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dataGrid2D="http://gu.se/DataGrid2D"
        xmlns:demo="clr-namespace:Gu.Wpf.DataGrid2D.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance demo:Vm}"
        mc:Ignorable="d">
    <Window.DataContext>
        <demo:Vm />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="IntTemplate" DataType="{x:Type system:Int32}">
            <TextBlock Text="{Binding}" HorizontalAlignment="Center" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type demo:ItemVm}">
            <TextBlock Background="Gainsboro" Text="{Binding Value}" />
        </DataTemplate>

        <DataTemplate x:Key="ItemTemplate" DataType="{x:Type demo:ItemVm}">
            <TextBlock Background="Aqua" Text="{Binding Value}" />
        </DataTemplate>

        <DataTemplate x:Key="HeaderItemTemplate" DataType="{x:Type demo:ItemVm}">
            <TextBlock Background="HotPink" Text="{Binding Value}" />
        </DataTemplate>

        <Style x:Key="CellStyle" TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <ContentPresenter Margin="1"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Rows}"
                  dataGrid2D:Source2D.CellTemplate="{StaticResource IntTemplate}"
                  dataGrid2D:Source2D.Headers="{Binding ColumnHeaders}" />

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  dataGrid2D:Source2D.Headers="{Binding ColumnItemHeaders}" />

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Items}"
                  dataGrid2D:Source2D.CellTemplate="{StaticResource ItemTemplate}"
                  dataGrid2D:Source2D.HeaderTemplate="{StaticResource HeaderItemTemplate}"
                  dataGrid2D:Source2D.Headers="{Binding ColumnItemHeaders}" />

        <DataGrid Grid.Row="3"
                  CellStyle="{StaticResource CellStyle}"
                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                  ColumnWidth="*"
                  ItemsSource="{Binding Items}"
                  dataGrid2D:Source2D.CellTemplate="{StaticResource ItemTemplate}"
                  dataGrid2D:Source2D.HeaderTemplate="{StaticResource HeaderItemTemplate}"
                  dataGrid2D:Source2D.Headers="{Binding ColumnItemHeaders}" />
     
        <GroupBox Grid.Row="4" Header="int[,]">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <DataGrid Grid.Column="0"
                          HeadersVisibility="None"
                          
                          dataGrid2D:Source2D.ItemsSource2D="{Binding Data}" />

                <DataGrid Grid.Column="1"
                          ColumnWidth="*"
                          dataGrid2D:Source2D.Width="SizeToHeader"
                          dataGrid2D:Source2D.Headers="{Binding ColumnHeaders}"
                          dataGrid2D:Source2D.ItemsSource2D="{Binding Data}" />
            </Grid>
        </GroupBox>

    </Grid>
</Window>
